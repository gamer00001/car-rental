<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Cars</h4>
                <div class="flex-shrink-0">
                    <div class="form-check form-switch form-switch-right form-switch-md">
                        <button type="button" class="btn btn-secondary waves-effect waves-light" style="background: #3577f1">Add New Car</button>
                    </div>
                </div>
            </div><!-- end card header -->

            <div class="card-body"> 
                <div class="live-preview">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="table-responsive mt-4 mt-xl-0">
                                <table class="table table-white table-striped table-nowrap align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Model</th>
                                            <th scope="col">Number</th>
                                            <th scope="col">Price(AED)</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @cars.each do |car| %>
                                        <tr>
                                            <td class="fw-medium"><%= car.id%></td>
                                            <td><%= car.name%></td>
                                            <td><%= car.model%></td>
                                            <td><%= car.number%></td>
                                            <td><%= car.price%></td>
                                            <td><%= car.category.name%></td>
                                            <td><%= image_tag car.image.url(:thumb)%></td>
                                            <td>
                                                <div class="hstack gap-3 flex-wrap">
                                                    <a href="javascript:void(0);" class="link-success fs-15"><i
                                                            class="ri-edit-2-line"></i></a>
                                                    <a href="javascript:void(0);" class="link-danger fs-15"><i
                                                            class="ri-delete-bin-line"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    <%end%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!--end col-->
                    </div>
                    <!--end row-->
                </div>
            </div><!-- end card-body -->
        </div><!-- end card -->
    </div>
    <!-- end col -->
</div>