<div class="row">
  <div class="col-12">
    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
      <h4 class="mb-sm-0">Booking Details</h4>

      <div class="page-title-right">
        <ol class="breadcrumb m-0">
          <li class="breadcrumb-item"><a href="<%=bookings_path%>">Booking</a></li>
        </ol>
      </div>

    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header align-items-center d-flex">
        <h4 class="card-title mb-0 flex-grow-1">Booking</h4>
        <div class="flex-shrink-0">
          <div class="form-check form-switch form-switch-right form-switch-md">
            <a href="<%=new_booking_path%>"><button type="button" class="btn btn-secondary waves-effect waves-light"
                style="background: #3577f1">Add New Booking</button></a>
          </div>
        </div>
      </div><!-- end card header -->

      <div class="card-body">
        <div class="live-preview">
          <div class="row">
            <div class="col-xl-12">
              <div class="table-responsive mt-4 mt-xl-0">
                <table class="table table-white table-striped table-nowrap align-middle mb-0">
                  <thead>
                    <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col"Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mobile</th>
                    <th scope="col">Car Name</th>
                    <th scope="col">Start Date</th>
                    <th scope="col">End Date</th>
                    <th scope="col">Advance Booking Price(AED)</th>
                    <th scope="col">Total Price(AED)</th>
                    <th scope="col">Driver License Image</th>
                    <th scope="col">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @bookings.each do |booking| %>
                    <tr>
                        <td class="fw-medium"><%= booking.id%></td>
                        <td><%=link_to booking_path(booking) do%><%= booking.first_name%> <%end%></td>
                        <td><%= booking.last_name%></td>
                        <td><%= booking.email%></td>
                        <td><%= booking.mobile%></td>
                        <td><%= booking&.car&.name%></td>
                        <td><%= booking.start_date%></td>
                        <td><%= booking.end_date%></td>
                        <td><%= booking.total_price%></td>
                        <td><%= booking.advance_booking_price%></td>
                        <td><%= image_tag booking.driving_license_image.url(:thumb)%></td>
                        <td>
                          <div class="hstack gap-3 flex-wrap">
                          <%=link_to edit_booking_path(booking),  class: "link-success fs-15" do %>
                            <i class="ri-edit-2-line"></i>
                          <%end%>
                            <%= link_to(booking_path(booking),
                              method: :delete, class: "link-danger fs-15", data: { confirm: 'Are you sure?', disable_with: 'loading...' }) do %>
                            <i class="ri-delete-bin-line"></i>
                            <%end%>
                          </div>
                        </td>
                      </tr>
                    <%end%>
                  </tbody>
                </table>
              </div>
            </div>
            <!--end col-->
          </div>
          <!--end row-->
        </div>
      </div><!-- end card-body -->
    </div><!-- end card -->
  </div>
  <!-- end col -->
</div>